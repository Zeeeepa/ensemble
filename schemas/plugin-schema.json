{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "version", "description", "author"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^ensemble-[a-z0-9-]+$",
      "description": "Plugin name (must start with 'ensemble-')"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "repository": {
      "type": "string",
      "format": "uri"
    },
    "license": {
      "type": "string",
      "enum": ["MIT", "Apache-2.0", "GPL-3.0", "BSD-3-Clause"]
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^ensemble-[a-z0-9-]+@\\d+\\.\\d+\\.\\d+$"
      }
    },
    "agents": {
      "type": "string",
      "description": "Path to agents directory"
    },
    "commands": {
      "type": "string",
      "description": "Path to commands directory"
    },
    "skills": {
      "type": "string",
      "description": "Path to skills directory"
    },
    "hooks": {
      "type": "string",
      "description": "Path to hooks directory"
    }
  }
}
