{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "version", "description", "owner", "categories", "plugins"],
  "properties": {
    "name": {
      "type": "string",
      "const": "ensemble"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "owner": {
      "type": "object",
      "required": ["name", "email", "url"],
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version", "category"],
        "properties": {
          "name": { "type": "string" },
          "version": { "type": "string" },
          "category": { "type": "string" },
          "featured": { "type": "boolean" }
        }
      }
    }
  }
}
